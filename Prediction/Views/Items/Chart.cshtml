@model Prediction.Models.ChartManual.ManualChart
@{
    @using Prediction.Models.ChartManual
    @using Newtonsoft.Json
    ViewData["Title"] = "Chart";

    System.Diagnostics.Debug.WriteLine($"Total number of selected items: {Model.SelectedItems.Count()}");

    foreach(int i in Model.SelectedItems)
    {
        System.Diagnostics.Debug.WriteLine($"ID: {i}");
    }

}

<div class="table-wrapper-scroll-y my-custom-scrollbar">
    <form method="post">
        <table class="table table-borderless table-hover table-striped table-sm mb-0">
            <tbody>
                @for (var i = 0; i < Model.PhoneInfo.Count(); i++)
                {
                    <tr>
                        <td>
                            <input type="hidden" asp-for="PhoneInfo[i].ConfigId" />
                            @Model.PhoneInfo[i].ConfigId
                        </td>
                        <td>
                            @Model.PhoneInfo[i].Brand
                        </td>
                        <td>
                            @Model.PhoneInfo[i].Model
                        </td>
                        <td>
                            <a asp-action="AddToChart" asp-route-selectedItems="@JsonConvert.SerializeObject(Model.SelectedItems)" asp-route-currentItem="@JsonConvert.SerializeObject(Model.PhoneInfo[i].ConfigId)">Select</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </form>
</div>

<div class="form-group">
    @Html.Partial("_selectedItems", Model)
</div>

<style>
    .my-custom-scrollbar {
        position: relative;
        height: 200px;
        overflow: auto;
    }

    .table-wrapper-scroll-y {
        display: block;
    }
</style>