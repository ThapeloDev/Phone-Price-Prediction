@model Prediction.View_Models.Hardware_Suggestion.PurchaseSuggestion
@{
    ViewData["Title"] = "HardwareCalc";
}

<h1>HardwareCalc</h1>

<div class="col-8 mx-auto ">
    <form asp-action="ChangeSpecs" id="myform">
        <div class="form-group text-center ">
            <div class="row">
                <label>Storage</label>
                <input asp-for="@Model.Storage" name="storage" type="number" />
            </div>
            <div class="row">
                <label>Memory Card Reader</label>
                <input asp-for="@Model.HasMemoryCardReader" name="hasMemoryCardReader" type="checkbox" />
            </div>
            <div class="row">
                <label>Cpu core count</label>
                <input asp-for="@Model.CpuCoreCount" name="cpuCoreCount" type="number" />
            </div>
            <div class="row">
                <label>Cpu speed</label>
                <input asp-for="@Model.CpuSpeed" name="cpuSpeed" type="number" step="0.01" />
            </div>
            <div class="row">
                <label>ram</label>
                <input asp-for="@Model.RAM" name="ram" type="number" />
            </div>
            <div class="row">
                <label>Headphone output</label>
                <input asp-for="@Model.HeadphoneOutput" name="headphoneOutput" type="checkbox" />
            </div>
            <div class="row">
                <label>5g capable</label>
                <input asp-for="@Model.Is5gCapable" name="is5gCapable" type="checkbox" />
            </div>
            <div class="row">
                <label>front camera mgpx</label>
                <input asp-for="@Model.FrontCameraMegapixel" name="frontCameraMgpx" type="number" />
            </div>
            <div class="row">
                <label>back camera mgpx</label>
                <input asp-for="@Model.BackCameraMegapixel" name="backCameraMgpx" type="number" />
            </div>
            <div class="row">
                <label>rear camera count</label>
                <input asp-for="@Model.RearCameraCount" name="rearCameraCount" type="number" />
            </div>
            <div class="row">
                <label>exchangable battery</label>
                <input asp-for="@Model.ExchangableBattery" name="exchangableBattery" type="checkbox" />
            </div>
            <div class="row">
                <label>wireless charging</label>
                <input asp-for="@Model.WirelessCharging" name="wirelessCharging" type="checkbox" />
            </div>
            <div class="row">
                <label>wireless charging</label>
                <input asp-for="@Model.FastCharging" name="fastCharging" type="checkbox" />
            </div>
            <div class="row">
                <label>water resistance</label>
                <input asp-for="@Model.WaterResistant" name="waterResistance" type="checkbox" />
            </div>


            <input type="submit" name="Submit" />
        </div>
    </form>
</div>
